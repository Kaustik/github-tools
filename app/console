#!/usr/bin/env php
<?php

// set to run indefinitely if needed
set_time_limit(0);

/* Optional. Itâ€™s better to do it in the php.ini file */
#date_default_timezone_set('America/Los_Angeles'); 

// include the composer autoloader
require_once 'vendor/autoload.php';

// import the Symfony Console Application 
use Kaustik\AppBundle\Command\GetPrNumberForBranchCommand;
use Kaustik\AppBundle\Command\GetPrStageForBranchCommand;
use Kaustik\AppBundle\Command\UpsertImageLinkToPullRequestDescription;
use Symfony\Component\Console\Application;

$app = new Application();
$app->add(
    new UpsertImageLinkToPullRequestDescription(),
    new GetPrNumberForBranchCommand(),
    new GetPrStageForBranchCommand()
);
$app->run();
